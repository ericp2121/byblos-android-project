<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_admin_employee_create">


  <TextView
      android:id="@+id/welcomeAdmin"
      android:layout_width="match_parent"
      android:layout_height="53dp"
      android:gravity="center"
      android:text="Welcome to Employee Account Services"
      android:textSize="20dp"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="0dp" />


  <EditText
      android:id="@+id/addressEnter"
      android:layout_width="378dp"
      android:layout_height="48dp"
      android:ems="10"
      android:gravity="center"

      android:hint="Enter address postal code (don't include spaces)"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textSize="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.636"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/welcomeAdmin"
      app:layout_constraintVertical_bias="0.14" />

  <EditText
      android:id="@+id/editTextPhone"
      android:layout_width="378dp"
      android:layout_height="48dp"

      android:ems="10"
      android:gravity="center"
      android:hint="Phone number (no dashes)"
      android:inputType="phone"
      android:textSize="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/welcomeAdmin"
      app:layout_constraintVertical_bias="0.255" />

  <Button
      android:id="@+id/btnUpdateInfo"
      android:layout_width="378dp"
      android:layout_height="48dp"
      android:gravity="center"

      android:text="Update information"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/welcomeAdmin"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/welcomeAdmin"
      app:layout_constraintVertical_bias="0.373" />

  <TextView
      android:id="@+id/textReply"
      android:layout_width="378dp"
      android:layout_height="48dp"
      android:gravity="center"

      android:text=""
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnHours"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Go to working hours"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>