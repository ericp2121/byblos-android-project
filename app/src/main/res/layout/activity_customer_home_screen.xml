<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHomeScreen">

    <TextView
        android:id="@+id/customerHomeScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="Customer Home Screen"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/customerZipCodeEditor"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:ems="10"
        android:gravity="center"
        android:hint="Enter Zip Code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customerHomeScreenTitle"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/zipCodeSearchBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Search for Branch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customerZipCodeEditor"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/carRentalCustomerBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Go to: Car rentals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zipCodeSearchBtn"
        app:layout_constraintVertical_bias="0.115" />

    <Button
        android:id="@+id/truckRentalCustomerBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Go to: Truck rentals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carRentalCustomerBtn"
        app:layout_constraintVertical_bias="0.115" />

    <Button
        android:id="@+id/movingAssistance"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Go to: Moving Assistance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/truckRentalCustomerBtn"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/branchFoundText"
        android:layout_width="344dp"
        android:layout_height="155dp"
        android:layout_marginBottom="160dp"
        android:ems="10"

        android:gravity="center"

        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movingAssistance"
        app:layout_constraintStart_toStartOf="@+id/movingAssistance"
        app:layout_constraintTop_toTopOf="@+id/movingAssistance"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/signOutBtnCustomer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movingAssistance"
        app:layout_constraintVertical_bias="0.868" />


</androidx.constraintlayout.widget.ConstraintLayout>