<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayData">

    <TextView
        android:id="@+id/serviceInfoHeading"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="Welcome to Admin services: Service Info"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/nameDisplay"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"


        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/serviceInfoHeading"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/serviceInfoHeading"
        app:layout_constraintTop_toTopOf="@+id/serviceInfoHeading"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/serviceTypeDisplay"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"


        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nameDisplay"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/nameDisplay"
        app:layout_constraintTop_toTopOf="@+id/nameDisplay"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/costDisplay"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"


        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/serviceTypeDisplay"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/serviceTypeDisplay"
        app:layout_constraintTop_toTopOf="@+id/serviceTypeDisplay"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/estimatedCostDisplay"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"


        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/costDisplay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/costDisplay"
        app:layout_constraintTop_toTopOf="@+id/costDisplay"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/approveRequestBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Approve Service Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/costDisplay"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:id="@+id/rejectRequestBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:text="Reject Service Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/approveRequestBtn"
        app:layout_constraintVertical_bias="0.246" />

</androidx.constraintlayout.widget.ConstraintLayout>